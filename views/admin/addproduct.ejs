<%-include('../layouts/adminHeader') %>


            <!-- HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row product">
                            <div class="col-lg-6">
                                <div class="card">
                                    <div class="card-header">
                                        <strong>Add Product</strong>
                                    </div>
                                    <div class="card-body card-block">
                                        <form action="" method="post" enctype="multipart/form-data">
                                            <div class="row form-group">
                                                <div class="col col-md-5">
                                                    <label for="text-input" class=" form-control-label">Product Name</label>
                                                </div>
                                                <div class="col-12 col-md-7">
                                                    <input type="text" id="text-input" name="product_name" placeholder="Text" class="form-control">
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-5">
                                                    <label for="text-input" class=" form-control-label">Price</label>
                                                </div>
                                                <div class="col-12 col-md-7">
                                                    <input type="number" step="any" id="text-input" name="product_price" placeholder="Text" class="form-control">
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-5">
                                                    <label for="text-input" class=" form-control-label">Brand</label>
                                                </div>
                                                <div class="col-12 col-md-7">
                                                    <input type="text" id="text-input" name="product_brand" placeholder="Text" class="form-control">
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-5">
                                                    <label for="text-input" class=" form-control-label">Stock</label>
                                                </div>
                                                <div class="col-12 col-md-7">
                                                    <input type="number" id="text-input" name="product_stock" placeholder="Stock" class="form-control">
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-5">
                                                    <label for="textarea-input" class=" form-control-label">Product Details</label><br>
                                                </div>
                                                <div class="col-12 col-md-7">
                                                    <textarea name="product_discription" id="textarea-input" rows="9" placeholder="Content..." class="form-control"></textarea>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-5">
                                                    <label for="select" class=" form-control-label">Select</label>
                                                </div>
                                                <div class="col-12 col-md-7">
                                                    <select name="product_category" id="select" class="form-control">
                                                        <%
                                                        if(category.length > 0){

                                                        for(let i=0; i<category.length; i++){
                                                        %>
                                                        <option value="<%= category[i].product_category %>"><%= category[i].product_category %></option>
                                                        <%
                                                        }
                            
                                                    }else{
                                                        %>
                                                            <tr>
                                                                <td colspan="5">Category Not found</td>
                                                            </tr>
                                                        <%
                                                    }
                                               
                                               %>

                                                    </select>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-5">
                                                    <label class=" form-control-label">Available Sizes</label>
                                                </div>
                                                <div class="col col-md-7">
                                                    <div class="form-check">
                                                        <div class="checkbox">
                                                            <label for="checkbox1" class="form-check-label ">
                                                                <input type="checkbox" id="checkbox1" name="product_size" value="36" class="form-check-input">36
                                                            </label>
                                                        </div>
                                                        <div class="checkbox">
                                                            <label for="checkbox2" class="form-check-label ">
                                                                <input type="checkbox" id="checkbox2" name="product_size" value="38" class="form-check-input"> 38
                                                            </label>
                                                        </div>
                                                        <div class="checkbox">
                                                            <label for="checkbox3" class="form-check-label ">
                                                                <input type="checkbox" id="checkbox3" name="product_size" value="40" class="form-check-input"> 40
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-5">
                                                    <label for="file-input" class=" form-control-label">Product Image</label>
                                                </div>
                                                <div class="col-12 col-md-7">
                                                    <input type="file" id="file-input" name="product_img" class="form-control-file">
                                                </div>
                                                <div class="col-12 col-md-7">
                                                    <input type="file" id="file-input" name="product_img" class="form-control-file">
                                                </div>
                                                <div class="col-12 col-md-7">
                                                    <input type="file" id="file-input" name="product_img" class="form-control-file">
                                                </div>
                                            </div>
                                            <div class="card-footer">
                                                <button type="submit" class="btn btn-primary btn-sm">
                                                    <i class="fa fa-dot-circle-o"></i> Submit
                                                </button>
                                            </div>
                                            <div class="mb-3">
                                                <% if(message) { %>
                                                    <p class="text-danger"><%= message %></p>
                                                <% } %>
                                            </div>
                                        </form>
                                        
                                    </div>
                                </div>
                            </div>
                            
                            
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="copyright">
                                    <p>Copyright Â© 2023 Taj. All rights reserved. Template by <a href="">Taj</a>.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
                       
                       
<%-include('../layouts/adminFooter') %>
