
<%-include('../layouts/adminHeader') %>


            <!-- END HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="dropdown m-b-10">
                            <h4>Download Report</h4>
                            <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              Filter Report
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                              <a href="/admin/pdfdownload?day=<%= 1 %>" class="dropdown-item" >Day</a>
                              <a href="/admin/pdfdownload?day=<%= 7 %>" class="dropdown-item" >Weekly</a>
                              <a href="/admin/pdfdownload?day=<%= 30 %>" class="dropdown-item" >Monthly</a>
                            </div>
                          </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="table-responsive table--no-card m-b-40" style="height: 470px;">
                                    <table class="table table-borderless table-striped table-earning">
                                        <thead>
                                            <tr>
                                                <th>Date</th>
                                                <th>Cust. Name</th>
                                                <th>Prdct Name</th>
                                                <th class="text-right">Price</th>
                                                <th class="text-right">Quantity</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <%
                                            if (orders.length > 0) {
                                              for (let i = 0; i < orders.length; i++) {
                                            %>
                                            <tr>
                                              <td><%= orders[i].product_details.order_date %></td>
                                              <td><%= orders[i].customer_name %></td>
                                              <td><%= orders[i].product_details.product_name %></td>
                                              <td>₹ <%= orders[i].product_details.product_price %></td>
                                              <td><%= orders[i].product_details.product_quantity %></td>
                                            </tr>
                                            <%
                                              }
                                            } else {
                                            %>
                                            <tr>
                                              <td colspan="5">No Orders found</td>
                                            </tr>
                                            <%
                                            }
                                            %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="copyright">
                                    <p>Copyright © 2023 Taj. All rights reserved. Template by <a href="">Taj</a>.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

<%-include('../layouts/adminFooter') %>
